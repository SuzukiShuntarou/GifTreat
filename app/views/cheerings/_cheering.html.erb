<%= turbo_frame_tag "cheerings_goal_#{goal.id}" do %>
  <% if goal.cheerings_count < 100 %>
    <%= button_to goal_cheerings_path(goal_id: goal.id), class: "btn btn-link" do %>
      <%= render 'cheerings/image', goal: goal %>
    <% end %>
  <% else %>
    <%= render 'cheerings/image', goal: goal %>
  <% end %>
<% end %>
