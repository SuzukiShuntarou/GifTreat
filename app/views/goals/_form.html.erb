<%= turbo_frame_tag goal do %>
  <%= bootstrap_form_with(model: goal, label_errors: true, class: 'fw-bold', data: { action: "turbo:submit-end->modal#close" }) do |form| %>
    <%= form.text_area :description %>
    <%= form.number_field :progress %>
    <div class="d-flex justify-content-center">
      <%= form.submit "更新", class: "btn btn-outline-primary" %>
    </div>
  <% end %>
<% end %>
