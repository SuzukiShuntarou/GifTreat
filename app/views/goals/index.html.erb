<% content_for(:title, '目標一覧') %>
<% set_meta_tags description: '登録した目標の一覧ページです。' %>

<section class="d-flex flex-column justify-content-center align-items-center text-center m-4">
  <h2 class="d-flex justify-content-center m-2">目標一覧</h2>
  <div class="btn-group m-3" style="min-width: 30rem; max-width: 45rem;">
    <%= link_to '実施中', goals_path(rewards: 'inprogress'), class: "#{current_page_button_primary('inprogress')} #{current_page_button_or_not('inprogress')}" %>
    <%= link_to '終了', goals_path(rewards: 'completed'), class: "#{current_page_button_primary('completed')} #{current_page_button_or_not('completed')}" %>
  </div>

  <% if @goals.empty? %>
    <div class="m-3 fs-2">
      <%= render 'no_goals_message', completed_or_in_progress: @completed_or_in_progress %>
    </div>
  <% else %>
    <div class="border rounded mt-3 goals-index">
      <table class="table table-striped table-borderless " style="table-layout: fixed; max-width: 75rem;">
        <thead class="fs-5">
          <tr>
            <th>期日</th>
            <th>目標</th>
            <th>進捗率</th>
          </tr>
        </thead>
        <tbody class="fs-4">
          <% @goals.each do |goal| %>
            <tr>
              <td>
                <%= goal.reward.completion_date %>
              </td>
              <td data-label="目標" style="overflow: hidden; text-overflow: ellipsis;">
                <%= link_to goal.description, reward_path(goal.reward.id), class: 'text-truncate', style: 'display: block;' %>
              </td>
              <td data-label="進捗率">
                <%= goal.progress %>%
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
  <div class="m-3">
    <%= paginate @goals,theme: 'bootstrap-5' %>
  </div>
  <div class="mx-3">
    <%= link_to 'ご褒美を追加する', new_reward_path, class: 'btn btn-outline-primary btn-lg' %>
  </div>
</section>
