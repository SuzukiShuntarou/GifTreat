<% content_for(:title, 'パスワード再設定') %>
<% set_meta_tags description: 'パスワード再設定用のメールアドレスの入力ページです。' %>

<div class="d-flex flex-column justify-content-center align-items-center gap-3 m-3">
  <h1 class="text-center">
    <%= link_to top_page_path do %>
      <%= image_tag('logo-vertical.png', alt: 'GifTreatのロゴ', style: 'max-width: 15rem;') %>
    <% end %>
  </h1>
  <h2 class="main-color"><%= t('.forgot_your_password') %></h2>

  <div class="fs-4" style="min-width: 15rem;">
    <%= bootstrap_form_with(model: @user, label_errors: true, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions d-flex justify-content-center">
        <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-outline-primary fs-5 mt-3', style: 'width: 10rem; height: 3rem;' %>
      </div>
    <% end %>
  </div>
</div>
