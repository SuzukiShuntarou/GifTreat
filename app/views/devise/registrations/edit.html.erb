<% content_for(:title, '登録情報変更') %>
<h2><%= t('.title', resource: devise_i18n_fix_model_name_case(resource.model_name.human, i18n_key: 'registrations.edit.title')) %></h2>

<%= bootstrap_form_with(model: @user, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <% if resource.avatar.attached? && resource.avatar.variable? %>
      <%= image_tag resource.avatar.variant(:profile_icon) %>
    <% end %>
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
  <% end %>

  <div class="field">
    <% if @minimum_password_length %>
      <%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %>
    <% end %>
    (<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)<br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    (<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)<br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('.update') %>
  </div>
<% end %>

<div>
  <%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure'), turbo_confirm: t('.are_you_sure') }, method: :delete %>
</div>
