<header class="shadow-sm">
  <% if user_signed_in? %>
    <nav class="navbar mx-5" style="height: 5rem;">
      <%= link_to goals_path do %>
        <h1><%= image_tag('logo-header.png', style: 'height: 4rem; width: auto;', alt: 'ヘッダーのGifTreatのロゴ') %></h1>
      <% end %>

      <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="ナビゲーションバーの表示ボタン">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" style="max-width: 15rem">
        <div class="offcanvas-header border-bottom">
          <div class="offcanvas-title">
            <%= image_tag('logo-header.png', style: 'height: 4rem;', alt: 'ナビゲーションバーのGifTreatのロゴ') %>
          </div>
          <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body mx-3">
          <ul class="navbar-nav gap-4 fs-5 mt-3">
            <li class="nav-item">
              <%= link_to 'トップページ', root_path %>
            </li>
            <li class="nav-item">
              <%= link_to 'ご褒美を追加する', new_reward_path %>
            </li>
            <li class="nav-item">
              <%= link_to '登録情報', edit_user_registration_path %>
            </li>
            <li class="nav-item">
              <%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete } %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  <% end %>
</header>
