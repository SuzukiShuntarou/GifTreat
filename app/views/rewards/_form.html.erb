<%= turbo_frame_tag reward do %>
  <%= bootstrap_form_with(model: reward, label_errors: true, data: { action: "turbo:submit-end->modal#close" }) do |form| %>
    <div class="d-flex justify-content-start fw-bold">
      <div class="d-flex align-items-center mx-2">
        <%= form.date_field :completion_date %>
        <span class="ms-2 fs-5">に</span>
      </div>
      <div class="d-flex flex-grow-1 align-items-center">
        <div class="flex-grow-1 me-2">
          <%= form.text_area :location %>
        </div>
        <span class="fs-5">で</span>
      </div>
    </div>
    <div class="d-flex flex-grow-1 align-items-center fw-bold">
      <div class="flex-grow-1 me-2">
        <%= form.text_area :description %>
      </div>
      <span class="fs-5">する</span>
    </div>
    <div class="d-flex justify-content-center">
      <%= form.submit "更新", class: "btn btn-outline-primary" %>
    </div>
  <% end %>
<% end %>
