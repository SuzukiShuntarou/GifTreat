<% content_for(:title, 'ご褒美・目標新規登録') %>
<% set_meta_tags description: 'ご褒美と目標の新規登録ページです。' %>

<div class="d-flex flex-column justify-content-center align-items-center fw-bold m-2">
  <%= bootstrap_form_with(model: @reward, label_errors: true) do |form| %>
    <section>
      <h2 class="d-flex justify-content-center main-color mt-1">ご褒美</h2>
      <div class="d-flex flex-column border border-secondary-subtle rounded shadow-sm my-2 p-3" >
        <div class="d-flex">
          <div class="d-flex align-items-center">
            <%= form.date_field :completion_date, class: 'form-control text-center fs-4', help: 'ご褒美を『いつ』' %>
            <div class="mx-2 fs-5">に</div>
          </div>
          <div class="d-flex flex-grow-1 align-items-center">
            <div class="flex-grow-1 pe-2">
              <%= form.text_area :location,
                  class: 'form-control text-center fs-4',
                  placeholder: '叙々苑',
                  help: 'ご褒美を『どこ』'
              %>
            </div>
            <div class="fs-5">で</div>
          </div>
        </div>
        <div class="d-flex align-items-center">
          <div class="flex-grow-1 pe-2">
            <%= form.text_area :description,
                class: 'form-control text-center fs-4',
                placeholder: '友人を誘って皆で食事',
                help: '『欲しいご褒美』や『共有したいご褒美』を登録'
            %>
          </div>
          <div class="fs-5">する</div>
        </div>
      </div>
    </section>
    <section>
      <h2 class="d-flex justify-content-center main-color">目標</h2>
      <div class="d-flex flex-column border border-secondary-subtle rounded shadow-sm my-2 p-3">
        <div class="d-flex flex-column flex-grow-1">
          <%= form.fields_for :goals do |goal_form| %>
            <div class="flex-grow-1">
              <%= goal_form.text_area :description,
                    class: 'flex-grow-1 form-control p-3 fs-4',
                    style: 'min-height: 10rem;',
                    placeholder: '毎日10分ランニングする！',
                    help: '期日までに達成したい目標を書いてください。'
              %>
            </div>
            <div class="form-group col-md-4">
              <%= goal_form.number_field :progress, class: 'text-center fs-4' %>
            </div>
          <% end %>
        </div>
      </div>
    </section>
    <div class="d-flex justify-content-center my-3">
      <%= form.submit "ご褒美と目標を登録する", class: 'btn btn-outline-primary fs-5', style: 'width: 18rem; height: 3rem;' %>
    </div>
  <% end %>
</div>
