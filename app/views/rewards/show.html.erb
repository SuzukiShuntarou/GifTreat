<% content_for(:title, 'ご褒美・目標詳細') %>
<% set_meta_tags description: '登録したご褒美と目標の詳細ページです。' %>

<div class="d-flex flex-column justify-content-center align-items-center m-2 px-2">
  <section>
    <h2 class="text-center main-color mt-1">ご褒美</h2>
    <div class="d-flex flex-column border border-secondary-subtle rounded shadow-sm my-2 px-2 py-3" style="max-width: 45rem;">
      <div id='reward' style="min-width: 20rem;">
        <%= render @reward %>
      </div>
    </div>
  </section>
  <section>
    <h2 class="text-center main-color mt-1">目標</h2>
    <div class="row gap-3 my-2 px-2">
      <% @goals.each do |goal| %>
        <div class="col d-flex flex-column border border-secondary-subtle rounded shadow-sm" style="min-height: 30rem; min-width: 20rem; max-width: 45rem;">
          <div id="<%= dom_id(goal) %>" class="flex-grow-1">
            <%= render 'goals/goal', goal: goal %>
          </div>
          <div class="d-flex justify-content-start align-items-center mb-2">
            <div id="likings_goal_<%= goal.id %>">
              <%= render 'likings/liking', goal: goal %>
            </div>
            <div id="cheerings_goal_<%= goal.id %>">
              <%= render 'cheerings/cheering', goal: goal %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </section>
  <% if @reward.in_progress? %>
    <section>
      <div class="fs-5 my-3">
        <%= link_to "削除", @reward, data: { turbo_method: :delete, turbo_confirm: "削除しますか？" } %>
      </div>
    </section>
  <% end %>
</div>
